<h1>User Details</h1>
<h2>User ID: <%= @user.id %> -- <%= @user.email %></h2>
<p>Full Name: <%= @user.full_name %></p>
<h3>Reviews</h3>
<% @user.reviews.each do |review| %>
  <h4><%= review.movie.title %></h4>
  <ul>
    <li><p>Rating: <%= review.rating_out_of_ten %>/10</p></li>
    <li><p>Character Count: <%= review.text.length %></p></li>
    <li><p>Creation Date: <%= formatted_date(review.created_at) %></p></li>
  </ul>
<% end %>
<%= link_to "Back to Admin User Index", admin_users_path %>
<hr>
