<header>
  <div  class='status-header-footer text-right'>
    <% if current_user %>
      <% if current_user && current_user.admin == true %>
        <%= link_to "Admin", admin_users_path, class: "btn btn-primary btn-xs" %>
      <% end %>
      Signed in as <%= current_user.full_name %>
      <%= link_to "Log out", session_path("current"), method: :delete, class: "btn btn-default btn-sm" %>
    <% else %>
      <%= link_to "Log In", new_session_path, class: "btn btn-default btn-sm" %><%= link_to "Sign Up", new_user_path, class: "btn btn-primary btn-lg" %>
    <% end %>
  </div>
</header>
